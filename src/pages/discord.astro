---
import Layout from '@/layouts/Layout.astro'
import discord from '@/assets/img/discord.webp'

const DISCORD_INVITE_URL = "https://discord.gg/8nu3ZdDkp7"
---

<Layout title="Redirigiendo a Discord...">
  <meta http-equiv="refresh" content={`0;url=${DISCORD_INVITE_URL}`} />

  <section
    class="w-full h-screen mx-auto text-white bg-blue flex flex-col justify-center items-center gap-6"
    style="height: calc(100vh - 80px)"
  >
    <img
      src={discord.src}
      alt="Logo de Discord"
      class="w-24 h-24 object-contain"
    />

    <h1 class="text-3xl font-semibold">
      Redirigiendo a Discord...
    </h1>

    <p class="opacity-70">
      Si no eres redirigido automáticamente,
      <a
        href={DISCORD_INVITE_URL}
        class="underline font-medium hover:text-white transition-colors"
      >
        haz clic aquí
      </a>.
    </p>
  </section>
</Layout>