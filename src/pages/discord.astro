---
import Layout from '@/layouts/Layout.astro'
import discord from '@/assets/img/discord.webp'

const DISCORD_INVITE_URL = "https://discord.gg/8nu3ZdDkp7"
---

<Layout title="Redirigiendo a Discord...">
  <section class="max-w-4xl mx-auto py-12 px-6 text-white bg-blue relative">
    <img src={discord.src} alt="Logo de Discord" class="w-24 h-24 object-contain mb-6" />
    <h1 class="text-3xl font-semibold mb-4">Redirigiendo a Discord...</h1>
    <p class="opacity-70">Si no eres redirigido automáticamente, haz clic <a href="{DISCORD_INVITE_URL}" class="text-light-blue underline">aquí</a>.</p>
  </section>

  <script>
    window.location.replace("{DISCORD_INVITE_URL}")
  </script>
</Layout>